{
  "crons": [
    {
      "path": "/api/cron/generate",
      "schedule": "0 6 * * 1"
    },
    {
      "path": "/api/cron/post",
      "schedule": "0 9 * * *"
    }
  ],
  "functions": {
    "api/analyze.js": {
      "maxDuration": 120,
      "memory": 1024
    },
    "api/cron/generate.js": {
      "maxDuration": 120
    },
    "api/admin/autopilot.js": {
      "maxDuration": 120
    }
  },
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/:path(.*)",
      "has": [{ "type": "host", "value": "www.stekfinder.nl" }],
      "destination": "https://stekfinder.nl/:path",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
